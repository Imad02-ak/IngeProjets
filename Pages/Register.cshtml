@page
@model IngeProjets.Pages.RegisterModel
@{
    Layout = null;
}

<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Créer un compte - Ingé-Projets</title>
    <link rel="icon" type="image/png" href="~/images/logo.png" />
    <link rel="stylesheet" href="~/css/Register.css" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>

<div class="container">

    <div class="left">
        <img src="~/images/logo.png" class="logo" />

        <h2 class="brand">
            <span class="ing">Ingé</span><span class="dash">-</span>
            <span class="pro">Pro</span><span class="jets">jets</span>
        </h2>

        <p class="tagline">
            Le suivi technique, maîtrisé<br />
            à la perfection
        </p>
    </div>

    <div class="right">
        <h1>Créer un compte</h1>
        <p class="subtitle">
            Remplissez vos informations pour accéder à Ingé-Projets.
        </p>

        <form method="post">

            <div class="row">
                <div class="input-box">
                    <i class="fa-solid fa-user"></i>
                    <input asp-for="Nom" placeholder="Nom" required />
                </div>

                <div class="input-box">
                    <i class="fa-solid fa-user"></i>
                    <input asp-for="Prenom" placeholder="Prénom" required />
                </div>
            </div>

            <div class="input-box full">
                <i class="fa-solid fa-envelope"></i>
                <input asp-for="Email" type="email"
                       placeholder="email@exemple.com" required />
            </div>

            <div class="input-box full">
                <i class="fa-solid fa-lock"></i>
                <input asp-for="Password" type="password"
                       placeholder="Mot de passe" required />
            </div>

            <div class="input-box full">
                <i class="fa-solid fa-lock"></i>
                <input asp-for="ConfirmPassword" type="password"
                       placeholder="Confirmer le mot de passe" required />
            </div>

            <button class="btn">Créer un compte</button>

            <p class="login"
               onclick="window.location.href='/Login'"
               style="cursor:pointer;">
                Déjà un compte ? <strong>Se connecter →</strong>
            </p>

            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <p style="text-align:center;color:green;font-weight:600;">
                    @Model.Message
                </p>
            }

        </form>
    </div>

</div>

</body>
</html>
